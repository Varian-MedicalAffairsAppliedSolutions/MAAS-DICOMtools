<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Teal/Petrol Accent Colors matching CombinedApp -->
    <Color x:Key="MahApps.Colors.Accent">#009999</Color>
    <Color x:Key="MahApps.Colors.Accent2">#00BBBB</Color>
    <Color x:Key="MahApps.Colors.Accent3">#007777</Color>
    <Color x:Key="MahApps.Colors.Accent4">#005555</Color>

    <!-- Orange Highlight Color -->
    <Color x:Key="MahApps.Colors.Highlight">#ec6602</Color>
    <Color x:Key="MahApps.Colors.HighlightSecondary">#d85500</Color>

    <!-- Create Brushes from Colors -->
    <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="{StaticResource MahApps.Colors.Accent}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Accent2" Color="{StaticResource MahApps.Colors.Accent2}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Accent3" Color="{StaticResource MahApps.Colors.Accent3}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Accent4" Color="{StaticResource MahApps.Colors.Accent4}" />
    
    <SolidColorBrush x:Key="MahApps.Brushes.Highlight" Color="{StaticResource MahApps.Colors.Highlight}" />
    <SolidColorBrush x:Key="MahApps.Brushes.HighlightSecondary" Color="{StaticResource MahApps.Colors.HighlightSecondary}" />

    <!-- Ideal Foreground (White on Teal) -->
    <SolidColorBrush x:Key="MahApps.Brushes.IdealForeground" Color="White" />
    <SolidColorBrush x:Key="MahApps.Brushes.IdealForegroundDisabled" Color="#CCFFFFFF" />
    
    <!-- Window Title Brush -->
    <SolidColorBrush x:Key="MahApps.Brushes.WindowTitle" Color="{StaticResource MahApps.Colors.Accent}" />
    
    <!-- Progress Ring Color -->
    <SolidColorBrush x:Key="MahApps.Brushes.Progress" Color="{StaticResource MahApps.Colors.Accent}" />
    
    <!-- Selection Colors -->
    <SolidColorBrush x:Key="MahApps.Brushes.SystemControlHighlightAccent" Color="{StaticResource MahApps.Colors.Accent}" />
    <SolidColorBrush x:Key="MahApps.Brushes.SystemControlHighlightAltAccent" Color="{StaticResource MahApps.Colors.Accent2}" />
    
    <!-- DataGrid Selection -->
    <SolidColorBrush x:Key="MahApps.Brushes.DataGrid.Selection.Background" Color="{StaticResource MahApps.Colors.Accent}" />
    <SolidColorBrush x:Key="MahApps.Brushes.DataGrid.Selection.Background.MouseOver" Color="{StaticResource MahApps.Colors.Accent2}" />
    <SolidColorBrush x:Key="MahApps.Brushes.DataGrid.Selection.BorderBrush" Color="{StaticResource MahApps.Colors.Accent3}" />
    <SolidColorBrush x:Key="MahApps.Brushes.DataGrid.Selection.Foreground" Color="White" />
    
    <!-- DataGrid Row MouseOver -->
    <SolidColorBrush x:Key="MahApps.Brushes.DataGrid.Row.MouseOver.Background" Color="#505050" />
    
    <!-- CheckBox Colors -->
    <SolidColorBrush x:Key="MahApps.Brushes.CheckBox" Color="{StaticResource MahApps.Colors.Accent}" />
    <SolidColorBrush x:Key="MahApps.Brushes.CheckBox.MouseOver" Color="{StaticResource MahApps.Colors.Accent2}" />
    
    <!-- ComboBox/DatePicker Arrow Colors -->
    <SolidColorBrush x:Key="MahApps.Brushes.ComboBox.Popup.Background" Color="#000000" />
    <SolidColorBrush x:Key="MahApps.Brushes.ComboBox.Popup.Border" Color="#808080" />
    
    <!-- Button Hover States -->
    <SolidColorBrush x:Key="MahApps.Brushes.Button.Flat.Background.MouseOver" Color="#505050" />
    <SolidColorBrush x:Key="MahApps.Brushes.Button.Flat.Background.Pressed" Color="#606060" />
    
</ResourceDictionary>

